{
  "name": "@web-builder/api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "api": "pm2 start processes.json",
    "build": "NODE_ENV=production npm-run-all clean compile webpack:production && npm run copy",
    "build:dev": "NODE_ENV=development npm-run-all clean compile webpack:development && npm run copy",
    "copy": "cp ./src/graphql/types/*.graphql ./dist/graphql/types/",
    "clean": "rm -rf ./dist",
    "compile": "tsc",
    "dev": "ts-node-dev src/index.ts",
    "lint": "npm run --prefix ../../ lint",
    "lint:fix": "npm run --prefix ../../ lint:fix",
    "start": "ts-node dist/index.js",
    "webpack:development": "npm run --prefix ../../ api:webpack:development",
    "webpack:production": "npm run --prefix ../../ api:webpack:production"
  },
  "author": "Carlos Santana",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.6",
    "@graphql-tools/schema": "^8.3.5",
    "@web-builder/utils": "^1.0.0",
    "apollo-server-express": "^3.6.6",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "graphql": "^15.8.0",
    "graphql-import": "^1.0.2",
    "graphql-middleware": "^6.1.20",
    "graphql-shield": "^7.5.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pg-native": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.17.0",
    "sequelize-typescript": "^2.1.3",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/express-jwt": "^6.0.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "ts-node-dev": "^1.1.8"
  }
}
