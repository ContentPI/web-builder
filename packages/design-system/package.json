{
  "name": "@web-builder/design-system",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:dev": "NODE_ENV=development npm-run-all clean compile webpack:development",
    "build": "NODE_ENV=production npm-run-all clean compile webpack:production",
    "clean": "rm -rf ./dist",
    "compile": "tsc",
    "lint": "npm run --prefix ../../ lint",
    "lint:fix": "npm run --prefix ../../ lint:fix",
    "prepublishOnly": "npm run lint && npm run build",
    "sandbox": "webpack serve --config=webpack.config.ts --env mode=development --env type=package --env sandbox=true",
    "test": "jest",
    "versioning": "./scripts/versioning.sh",
    "webpack:development": "webpack --config=webpack.config.ts --env mode=development --env type=package",
    "webpack:production": "webpack --config=webpack.config.ts --env mode=production --env type=package"
  },
  "author": "Carlos Santana",
  "license": "MIT",
  "dependencies": {
    "@types/prismjs": "^1.26.0",
    "@types/styled-components": "^5.1.24",
    "@web-builder/devtools": "1.0.0",
    "prismjs": "^1.27.0",
    "slug": "^5.3.0",
    "webpack": "^5.70.0",
    "webpack-merge": "^5.8.0"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}
